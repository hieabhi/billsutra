{
  "name": "billsutra-hotel-gst",
  "version": "1.0.0",
  "description": "Beautiful GST Billing Software for Hotels - Desktop Edition",
  "main": "electron-main.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:client": "cd client && npm run build",
    "start": "node server/index.js",
    "electron": "electron .",
    "electron:dev": "electron .",
    "pack": "npm run build:client && electron-builder --dir",
    "dist": "npm run build:client && electron-builder",
    "dist:win": "npm run build:client && electron-builder --win --x64",
    "dist:mac": "npm run build:client && electron-builder --mac",
    "dist:linux": "npm run build:client && electron-builder --linux"
  },
  "keywords": [
    "gst",
    "billing",
    "hotel",
    "invoice"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "node-machine-id": "^1.1.12",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "nodemon": "^3.0.1"
  }
}
