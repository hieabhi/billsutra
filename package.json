{
  "name": "billsutra-hotel-gst",
  "version": "1.0.0",
  "description": "Beautiful GST Billing Software for Hotels",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "powershell -ExecutionPolicy Bypass -File ./start-dev.ps1",
    "stop": "powershell -ExecutionPolicy Bypass -File ./stop-dev.ps1",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "db:migrate:supabase": "node server/utils/migrateToSupabase.js",
    "db:test:supabase": "node server/utils/testSupabaseConnection.js"
  },
  "keywords": [
    "gst",
    "billing",
    "hotel",
    "invoice"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.20.0",
    "uuid": "^9.0.1",
    "validator": "^13.15.23"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
